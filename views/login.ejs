<!DOCTYPE html>
<html>
<head>
    <title>DZB eReader Demo</title>
    <link rel='stylesheet' href='/stylesheets/bootstrap-theme.css'/>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css'/>
    <link rel='stylesheet' href='/stylesheets/eReader_login.css'/>
</head>
<body>

<script>
    setTimeout(function sunrise() {
        document.getElementsByClassName('header')[0].style.backgroundColor = '#303d6c';
    }, 0);
</script>
<script src="javascripts/login.js"></script>

<div class="default-page">

    <div class="header">
        <div class="row">
            <div class="col-md-8 col-md-offset-1">
                <h1 id="main-title" class="container">DZB eReader Demo</h1>

                <h3 class="container">Epub 3 ...</h3>
            </div>
            <div id="logo" class="col-md-3">
                <a href="http://www.dzb.de/" title="DZB Hauptseite"><span class="invisible">DZB Hauptseite</span></a>
            </div>
        </div>


    </div>

    <div class="main container">
        <li>
            <form id="login" class="form-horizontal col-md-6 border" action="/login" method="POST"
                  aria-describedby="loginFailed">
                <!--ARIA-->
      <span id="loginFailed" role="tooltip" class="tooltip hidden<% if(message[0] === "") { %> hidden <% } %>"
            aria-hidden=<% if(typeof message[0] !== "") { %> "false" <% } else { %> "true" <% } %>>
                Ihr Login ist fehlgeschlagen</span>

                <div class="form-group">
                    <label for="email" class="control-label col-xs-2">Email</label>
                    <div class="col-xs-10">
                        <input name="username" type="email" class="form-control" id="email" placeholder="Email">
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="control-label col-xs-2">Password</label>
                    <div class="col-xs-10">
                        <input name="password" type="password" class="form-control" id="password"
                               placeholder="Passwort">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-offset-2 col-xs-10">
                        <button type="submit" value="submit" class="btn btn-primary">Login</button>
                        <small><a href="">Sie haben Ihr Passwort vergessen?</a></small>
                    </div>
                </div>
            </form>
        </li>
    </div>
</div>

</body>
</html>
