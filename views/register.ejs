<!DOCTYPE html>
<html>
<head>
    <title>DZB eReader Demo</title>
    <link rel='stylesheet' href='/stylesheets/bootstrap-theme.css'/>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css'/>
    <link rel='stylesheet' href='/stylesheets/eReader_login.css'/>
</head>
<body>
<h1>Register</h1>
<a href='/bookshelf'>B체cherregale</a>




<section class="main container">
    <form id="register"
          class="form-horizontal col-md-6 border"
          action="/register"
          method="POST"
          aria-describedby="loginFailed"
          role=form>
        <% if (typeof info != "undefined"){ %> <span class="tooltip"><%= info %></span> <% } %>
        <% if (typeof success != "undefined"){ %> <span class="tooltip" style="background: green"><%= success %></span> <% } %>
        <div class="form-group">
            <label for="email" class="control-label col-xs-2">E-Mail</label>

            <div class="col-xs-10">
                <input name="username"
                       type="email"
                       class="form-control"
                       id="email"
                       placeholder="E-Mail"
                       role=textbox
                       required>
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="control-label col-xs-2">Passwort</label>

            <div class="col-xs-10">
                <input name="password"
                       type="password"
                       class="form-control"
                       id="password"
                       placeholder="Passwort"
                       role=textbox
                       required>
            </div>
        </div>
        <div class="form-group">
            <label for="bookshelf" class="control-label col-xs-2">B체cherregal</label>

            <div class="col-xs-10">
                <select id="bookshelf" name="bookshelf">
                    <option value="">--W채hle ein B체cherregal--</option>
                    <% for(var i=0; i < bookshelfs.length; i++) { %>
                    <option value="<%= bookshelfs[i]._id %>"><%= bookshelfs[i].name %></option>
                    <% }; %>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-10">
                <button type="submit"
                        value="submit"
                        class="btn btn-primary"
                        role=button
                        >Eintragen
                </button>
            </div>
        </div>
    </form>
</section>
</body>
</html>